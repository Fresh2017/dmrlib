#ifndef _DMR_CONFIG_H
#define _DMR_CONFIG_H

{% if args.with_debug %}
#define DMR_DEBUG
#include <assert.h>
{% else -%}
#undef DMR_DEBUG
{% endif %}

{% if env.have_pthread -%}
#define DMR_HAVE_PTHREAD
{% else -%}
#undef DMR_HAVE_PTHREAD
{% endif %}

{% if args.with_dmalloc -%}
#define WITH_DMALLOC
#include <string.h>
#include <dmalloc.h>
{% else -%}
#undef WITH_DMALLOC
{% endif %}

{% if args.with_mbelib -%}
#define WITH_MBELIB
{% else -%}
#undef WITH_MBELIB
{% endif %}

#endif // _DMR_CONFIG_H
